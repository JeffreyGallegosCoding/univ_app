<%= render 'shared/errors', obj: @student %>

<div class="row">
  <div class="col s12">
    <h3 class="center-align">Edit your information</h3>
  </div>
</div>

<div class="row">
  <%= form_for(@student, html: {class: "col s12"}) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :name, class: "validate", id: "name", type: "text" %>
        <%= f.label :name %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :email, class: "validate", id: "email", type: "email" %>
        <%= f.label :email %>
      </div>
    </div>
    <!--            <div class="row">-->
    <!--              <div class="input-field col s12">-->
    <!--                <input id="password" type="password" class="validate">-->
    <!--                <label for="password">Password</label>-->
    <!--              </div>-->
    <!--            </div>-->
    <div class="row">
      <div class="input-field col s12">
        <%= f.submit "Submit", class: "btn waves-effect waves-light" %>
      </div>
    </div>
  <% end %>
</div>