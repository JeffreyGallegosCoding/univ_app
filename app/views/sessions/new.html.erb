

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <div class="row">
          <div class="col s12">
            <h3 class="center-align">Login In!</h3>
          </div>
        </div>
        <div class="row">
          <%= form_for(:sessions, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.email_field :email, class: "validate", id: "email", type: "email", placeholder: "Please Enter in Your Email", autofocus: true%>
                <%= f.label :email, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, class: "validate", id: "password", type: "password", placeholder: "Enter your password" %>
                <%= f.label :password, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.submit "Login", class: "btn waves-effect waves-light" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>